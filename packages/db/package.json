{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "module": "CommonJS",         
    "target": "ES2021",
    "isolatedModules": false
  },
  "include": [
    "*.ts",
    "prisma/generated/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
